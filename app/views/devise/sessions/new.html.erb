<div class="container center" >
  <div class="col-lg-2 col-lg-offset-8" >
    <div class="card" style="width: 38rem;">
      <div class="card-top bg-success mb-7" style= "height: 100px;">
        <div class="container">
          <h2 style ="color: white;"><strong>Login</strong></h2>
          <h5 style ="color: white;" > Insert your username/email and password bellow !! </h5>  
        </div>
        </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
    <%= f.label :login %><br />
    <%= f.text_field :login, autofocus: true, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, class:'form-control', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:'btn btn-success btn-lg btn-block'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
         </div>
      </div>
  </div>
</div>